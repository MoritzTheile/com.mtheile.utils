			Root<DataPoint> root = criteriaQuery.from(DataPoint.class);

			Join<DataPoint, ENTITYNAME_TOKEN> gcDataPointJoin = root.join(DataPoint_.ENTITYNAME_FIRSTLETTER_LOWERCASE_TOKEN, JoinType.LEFT);

