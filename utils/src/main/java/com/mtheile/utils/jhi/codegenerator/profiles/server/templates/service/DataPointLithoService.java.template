				criteria.setLowerBound(lowerBound);
				criteria.setLeftBound(leftBound);
				criteria.setUpperBound(upperBound);
				criteria.setRightBound(rightBound);


				long result = -1;

				try {
					result = countByCriteria(lithoAuth, criteria);
				} catch (Exception e) {

					e.printStackTrace();
				}

				return (int) result;

			}

		}.cluster();

	}
